<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>ALL SPOTS!</h1>
    <div>
        <a href="spots/new">Add Spot</a>
    </div>

    <% spots.forEach(spot=> { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= spot.images[0].url %>">
                </div>
                <div class="col-mg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= spot.title%>
                        </h5>
                        <p class="card-text">
                            <%= spot.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= spot.location %>
                            </small>
                        </p>
                        <a href="/spots/<%= spot._id %>" class="btn btn-primary">View <%= spot.title %></a>
                    </div>
                </div>
            </div>
        </div>

        <% }) %>

            <script>
                const mapBoxToken = '<%- process.env.MAPBOX_TOKEN %>';
                const spots = { features: <%- JSON.stringify(spots) %> };
            </script>

            <script src="/javascripts/clusterMap.js"></script>